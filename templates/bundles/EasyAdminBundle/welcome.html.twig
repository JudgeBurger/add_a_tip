{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title 'Bienvenue dans votre Espece Personnel' %}

{% block page_content %}
    <div class="container">
        <div class="row">
            <div class="col-6 alert-info">


                <span class="display-3">{{ countAllTips['value'] }}</span>Tips
            </div>
            <div class="col-6 alert-danger">
                <span class="display-3">{{ countAllUser['value'] }}</span>Commentaires
            </div>
        </div>
        <div class="row">
            <div class="col-12 mt-5">
                <h3>Vos Tips</h3>
                <ul class="list-group">
                    {% for tip in tips %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                {{ tip.name }} : {{ tip.example }}
                            </div>
                            <span class="badge badge-primary badge-pill">{{ tip.language }}</span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
