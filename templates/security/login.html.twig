{% extends 'base.html.twig' %}

{% block title %}Espace Administrateur{% endblock %}

{% block body %}
    <h1 class="title-home mt-5">¡ Bienvenue !</h1>
    <div class="login-box mt-5">
        <h1 class="login-title text-center">Acceder à votre espace</h1>

        <div class="textbox">
            <i class="fas fa-user"></i>
            <label for="text"></label>
            <input id="text" name="text" type="text" placeholder="Identifiant" required>
        </div>

        <div class="textbox">
            <i class="fas fa-lock"></i>
            <label for="password"></label>
            <input id="password" name="password" type="password" placeholder="Mot de passe" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="mt-5 d-flex justify-content-center align-items-center">
            <button class="card-button">
                <a href="{{ path('user_index') }}">Se connecter</a>
            </button>
            <button class="card-button ml-5">
                <a href="{{ path('user_new') }}">Créer un compte</a>
            </button>
        </div>
    </div>
{% endblock %}
