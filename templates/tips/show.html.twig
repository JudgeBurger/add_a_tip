{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h1 class="title-show">{{ tip.name }}</h1>

    <section class="content">

        <div class="cards d-flex justify-content-center align-items-center">
            <div class="card">
                <div class="d-flex justify-content-end">
                    {{ include('tips/_delete_form.html.twig') }}
                </div>
                <img class="img"
                     src="https://images.unsplash.com/photo-1515879218367-8466d910aaa4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80"
                     alt="upload-by-user"
                >
                <h3 class="mt-3">{{ tip.name }}</h3>
                <p>{{ tip.description }}</p>

                <div class="d-flex justify-content-end align-items-end">
                    <button class="copy-in-show" id="copy-button"
                            data-clipboard-target="#tip-{{ tip.id }}-code">
                        <i class="fas fa-clone"></i>
                    </button>
                </div>
                <span class="block-code">
                    <code id="tip-{{ tip.id }}-code">
                        {{ tip.code }}
                    </code>
                </span>


                <div class="d-flex justify-content-center align-items-center">
                    <div class="circle-language mt-5 mr-5">
                        <img src="" alt="img">
                    </div>
                    <div class="circle-language mt-5 mr-5">
                        <img src="" alt="img">
                    </div>
                    <div class="circle-language mt-5">
                        <img src="" alt="img">
                    </div>
                </div>
            </div>
        </div>

    </section>

{% endblock %}
