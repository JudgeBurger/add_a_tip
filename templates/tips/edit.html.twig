{% extends 'base.html.twig' %}

{% block title %}Edit Tips{% endblock %}

{% block body %}
    <h1 class="mt-5">Modifier <strong>{{ tip.name }}</strong></h1>

    <section class="container-fluid">
        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center align-items-center">
                {{ include('tips/_form.html.twig', {'button_label': 'Update'}) }}
            </div>
            <div class="">
                {{ include('tips/_delete_form.html.twig') }}
            </div>
        </div class="">

        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center align-items-center">
                <div class="mr-3 mt-5 mb-5">
                    <button class="card-button">
                        <a href="{{ button_label|default('Save') }}">Enregistrer</a>
                    </button>
                </div>
                <div class="mr-3 mt-5 mb-5">
                    <button class="card-button">
                        Effacer
                    </button>
                </div>
                <div class="mr-3 mt-5 mb-5">
                    <button class="card-button">
                        <a href="{{ path('tips_index') }}">Retour</a>
                    </button>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
