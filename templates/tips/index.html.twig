{% extends 'base.html.twig' %}

{% block title %}Tips{% endblock %}

{% block body %}
    <h1 class="mt-5">Tips</h1>
    <section class="content">
        <div class="cards d-flex justify-content-between align-items-center">
            {% for tip in tips %}
                <div class="card">
                    <img class="img"
                         src="https://images.unsplash.com/photo-1515879218367-8466d910aaa4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80"
                         alt="upload"
                    >
                    <h3 class="mt-3">{{ tip.name }}</h3>
                    <p>{{ tip.description | slice(0, 20) }}...</p>
                    <div class="pad-top">
                        <a href="{{ path('tips_show', {'id': tip.id}) }}" class="button-more">En savoir plus</a>
                    </div>
                </div>
            {% else %}
                <h1 class="none">AUCUN RÃ‰SULTAT</h1>
            {% endfor %}
        </div>

        <div class="navigation d-flex justify-content-center mt-3">
            {{ knp_pagination_render(tips) }}
        </div>

        <div class="col-md-12">
            <div class="d-flex justify-content-end align-items-end mr-5">
                <a class="add_a_tip card-button mt-5 mb-5" title="Ajouter un Tip"
                   href="{{ path('tips_new') }}">
                    <i class="fas fa-plus fa-3x"></i>
                </a>
            </div>
        </div>

    </section>

{% endblock %}
