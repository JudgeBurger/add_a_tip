{% extends 'base.html.twig' %}

{% block title %}Tips{% endblock %}

{% block body %}
    <h1 class="mt-5">Tips</h1>

    <section class="content">
        <div class="cards d-flex flex-wrap mt-5">
            {% for tip in tips %}
                <div class="card mb-5">
                    <div class="card__side card__side--front card__side--front-1">
                        <div class="card__description">
                            <h1>{{ tip.name }}</h1>
                        </div>
                    </div>
                    <div class="card__side card__side--back card__side--back-1">
                        <div class="card__description">
                            <img class="card-image" src="https://via.placeholder.com/500x200" alt="image uploded by user">
                            <div class="col-12 mx-lg-5 col-md-5 col-lg-2 m-2 p-0 d-flex justify-content-center align-content-center">
                                <button class="mt-5 card-button">
                                    <a class="" href="{{ path('tips_show', {'id': tip.id}) }}">Détail</a>
                                </button>
                                <button class="mt-5 ml-2 card-button">
                                    <a href="{{ path('tips_edit', {'id': tip.id}) }}">Modifier</a>
                                </button>
                            </div>
                        </div>
                        {{ tip.description }}
                        {{ tip.language }}
                    </div>
                </div>
            {% else %}
                <tr>
                    <td colspan="6">Aucun Résultat</td>
                </tr>
            {% endfor %}
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <button class="learn-more mt-5 ml-5 mb-5">
                <a href="{{ path('tips_new') }}">Ajouter un Tip</a>
            </button>
        </div>
    </section>



{% endblock %}
