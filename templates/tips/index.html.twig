{% extends 'base.html.twig' %}

{% block title %}Tips{% endblock %}

{% block body %}
    <h3 class="tips-title mt-5 ml-5">Vos Tips</h3>
    <div class="col-12 d-flex flex-column align-items-center">
        <div class="mb-3 mt-5 col-md-6 col-sm-6 col-xs-6">
            {% for tip in tips %}
            <div class="card tip-list mb-5">
                <ul class="nav flex-row mt-5">
                    <div class="col-6">
                        <img class="card-img-top mb-0"
                             src="https://www.slate.fr/sites/default/files/styles/1060x523/public/code_3.jpg"
                             alt="Card image cap">
                    </div>

                    <div class="col-6">
                        <div class="card-body">
                            <h4 class="card-title">{{ tip.name }}</h4>
                            <p class="card-text">{{ tip.description }}</p>
                            <div class="block-code">
                                <p class="card-text">{{ tip.code }}</p>
                            </div>
                        </div>
                        <div class="nav col-md-12 flex-row mt-3">
                            <p class="small-text align-content-start col-md-6"><small class="text-muted">Crée le : </small></p>
                            <p class="small-text align-items-end col-md-6"><small class="text-muted">Crée par : </small></p>
                        </div>
                    </div>
                </ul>
            </div>
            {% else %}
                Aucun résultats
        </div>
        {% endfor %}

    </div>

{% endblock %}
