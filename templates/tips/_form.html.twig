{#                                {{ form_errors(form.language) }}#}
{#                            </div>#}
{#                        {% endif %}#}
{#                    </div>#}
                </div>
                <div class="d-flex flex-lg-row flex-column col-md-6 p-0">
                    <div class="form-group d-flex flex-column my-3 col-lg-6">
                        {{ form_label(form.code, 'Ligne de code de votre Tip') }}
                        {{ form_widget(form.code) }}
                        {% if form.code.vars.errors is not empty %}
                            <div class="mt-2 text-left alert alert-danger">
                                {{ form_errors(form.code) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group d-flex flex-column my-3 col-lg-6 align-items-center">
                        {{ form_label(form.picture,'Une Capture d\'Ã©cran') }}
                        {{ form_widget(form.picture,{'attr': {'class': 'mx-lg-3 w-100'}}) }}
                        {% if form.picture.vars.errors is not empty %}
                            <div class="mt-2 text-left alert alert-danger w-100">
                                {{ form_errors(form.picture) }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="form-group d-flex flex-column my-3 col-lg-6 text-truncate">
                    {{ form_label(form.description, 'Description de votre Tip') }}
                    {{ form_widget(form.description, {'attr': {'class': 'text-truncate'}}) }}
                    {% if form.description.vars.errors is not empty %}
                        <div class="mt-2 text-left alert alert-danger">
                            {{ form_errors(form.description | nl2br) }}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="d-flex justify-content-center">
                    <a class="card-button mr-5 btn-info" href="{{ path('tips_index') }}">Retour</a>
                <button class="card-button btn-info">
                    {{ button_label|default('Enregistrer') }}
                </button>
            </div>
        </div>
    </div>
</section>
{{ form_end(form) }}
