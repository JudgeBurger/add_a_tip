{{ form_start(form) }}
<section class="d-flex align-items-center mb-5">
    <div class="w-100 text-center">
        <div class="form">
            <h1 class="text-center my-5"></h1>
            {{ form_start(form.name, {'attr': {'class': 'col-12 d-flex flex-column align-items-center p-0'}}) }}
            <div class="col-12 d-flex flex-column p-4 align-items-center">
                <div class="d-flex flex-md-row flex-column col-md-6 p-0">
                    <div class="form-group d-flex flex-column my-3 col-md-6">
                        {{ form_label(form.name, 'Nom de votre Tip') }}
                        {{ form_widget(form.name) }}
                        {% if form.name.vars.errors is not empty %}
                            <div class="mt-2 text-left alert alert-danger">
                                {{ form_errors(form.name) }}
                            </div>
                        {% endif %}
                    </div>

